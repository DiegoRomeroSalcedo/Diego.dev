---
import { Image } from "astro:assets";
import Linkedin from "../assets/linkedin.svg";
import GitHub from "../assets/github-dark.svg";

interface Footer {
    aHref: string;
    imgSrc: string;
    alt: string;
}

const contacts: Footer[] = [
    {aHref: 'https://www.linkedin.com/in/diego-andr%C3%A9s-salcedo-romero-9579b026a/', imgSrc: Linkedin, alt: 'logo de la red social de linkedin'},
    {aHref: 'https://github.com/DiegoRomeroSalcedo', imgSrc: GitHub, alt: 'log de la plataforma github'},
]   
---

<footer id="contact" class="p-2 mt-16 min-h-40 grid place-content-center">
    <section class="grid grid-cols-[repeat(auto-fill,minmax(300px, 1fr))] md:grid-cols-2 justify-items-center items-center gap-8">
        <section class="text-white">
            <p class="opacity-90">Design by Diego Salcedo | 2025</p>
            <p>Email: diegosalcedo170@gmail.com</p>
            <p>Phone: 3014421902</p>
            <p>Made with Astro</p>
        </section>
        <section>
            <ul class="flex flex-row gap-2">
                {
                    contacts.map(contact => (
                        <li>
                            <a href={contact.aHref} class="group" target="_blank">
                                <Image src={contact.imgSrc} alt={contact.alt} loading="lazy" class="w-10 transition group-hover:scale-110 duration-300" />
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>
    </section>
</footer>